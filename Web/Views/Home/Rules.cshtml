@{
    ViewData["Title"] = "Rules";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4">🏀 Fantasy Basketball Rules</h1>
                <a href="/home" class="btn btn-outline-primary">← Back to Home</a>
            </div>
        </div>
    </div>

    <!-- Fantasy Basketball Rules -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>🏀 How Fantasy Basketball Works</h5>
                </div>
                <div class="card-body">
                    <p class="lead">Build your dream team and compete for the championship!</p>
                    <p>You collect points each week based on your players' performance. After 22 rounds, the player with the most total points wins the championship.</p>
                    
                    <h6 class="mt-4 mb-3">👥 Roster & Scoring Structure:</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>🏀 Starting Lineup (5 players)</h6>
                            <p class="text-success">✅ <strong>All 5 starters' scores count</strong></p>
                            <p class="small text-muted">Your core players - every point matters!</p>
                        </div>
                        <div class="col-md-6">
                            <h6>🪑 Bench Players (5 players)</h6>
                            <p class="text-info">📊 <strong>Top 3 bench players' scores count</strong></p>
                            <p class="small text-muted">Rewards building a balanced 8-man roster</p>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning mt-3">
                        <strong>💡 Strategy:</strong> This system rewards roster depth! You can't just stack 5 stars and ignore your bench. Build a balanced team where your 6th, 7th, and 8th best players still contribute to your weekly score.
                    </div>
                    
                    <h6 class="mt-4 mb-3">📊 Scoring System:</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">✅ <strong>+1 point</strong> for each point scored</li>
                                <li class="mb-2">✅ <strong>+1 rebound</strong> for each rebound</li>
                                <li class="mb-2">✅ <strong>+1 assist</strong> for each assist</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">✅ <strong>+2 steals</strong> for each steal</li>
                                <li class="mb-2">✅ <strong>+2 blocks</strong> for each block</li>
                                <li class="mb-2">❌ <strong>-1 turnover</strong> for each turnover</li>
                                <li class="mb-2">🏆 <strong>+5 team win</strong> if your player's team wins</li>
                                <li class="mb-2">💔 <strong>-3 team loss</strong> if your player's team loses</li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="alert alert-info mt-3">
                        <strong>💡 Strategy Tip:</strong> Choose players who score consistently and play for winning teams to maximize your points! Remember, team losses cost you -3 points per player, so avoid players from struggling teams.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
